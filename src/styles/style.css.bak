:root {
  --primary-color: #4a90e2;
  --secondary-color: #f5a623;
  --tertiary-color: #7ed321;
  --danger-color: #d0021b;
  --light-color: #ffffff;
  --dark-color: #333333;
  --grey-light: #f4f7f6;
  --grey-medium: #e0e0e0;
  --grey-dark: #666666;

  --font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
  --border-radius: 8px;
  --box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
  --transition-speed: 0.3s;

  --sky-bg: linear-gradient(to bottom, #87ceeb, #dcedf7);
  --beach-bg: linear-gradient(to bottom, #f7e8aa, #e0cda5);
  --ground-bg: linear-gradient(to bottom, #90ee90, #7db97d);

  --cloud-color: #f0f8ff;
  --sandcastle-color: #d2b48c;
  --plant-color: #228b22;

  --sidebar-width: 260px;
  --z-index-backdrop: 1040;
  --z-index-modal: 1050;
  --z-index-sidebar: 1000;
  --z-index-header-toggle: 1001;
}

*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html {
  font-size: 16px;
}

body {
  font-family: var(--font-family);
  background-color: var(--grey-light);
  color: var(--dark-color);
  line-height: 1.6;
  display: flex;
  min-height: 100vh;
  margin: 0;
}

h1,
h2,
h3,
h4,
h5,
h6 {
  margin-bottom: 0.75em;
  color: var(--dark-color);
  line-height: 1.2;
}
h1 {
  font-size: 1.8rem;
}
h2 {
  font-size: 1.4rem;
}
h3 {
  font-size: 1.2rem;
}

ul {
  list-style: none;
}
a {
  color: var(--primary-color);
  text-decoration: none;
  transition: color var(--transition-speed) ease;
}
a:hover {
  text-decoration: underline;
}

button {
  font-family: inherit;
  cursor: pointer;
  border: none;
  border-radius: var(--border-radius);
  padding: 0.6em 1.2em;
  font-size: 0.9rem;
  transition: background-color var(--transition-speed) ease,
    transform var(--transition-speed) ease;
  line-height: 1.4;
  display: inline-flex;
  align-items: center;
  gap: 0.5em;
  justify-content: center;
  position: relative;
}
button:focus-visible {
  outline: 2px solid var(--primary-color);
  outline-offset: 2px;
}

.button-primary {
  background-color: var(--primary-color);
  color: var(--light-color);
}
.button-primary:hover {
  background-color: #357abd;
  transform: translateY(-2px);
}
.button-secondary {
  background-color: var(--grey-medium);
  color: var(--dark-color);
}
.button-secondary:hover {
  background-color: #c8c8c8;
  transform: translateY(-2px);
}
.button-danger {
  background-color: var(--danger-color);
  color: var(--light-color);
}
.button-danger:hover {
  background-color: #a80115;
  transform: translateY(-2px);
}
.button-icon {
  padding: 0.5em;
  font-size: 1rem;
  line-height: 1;
}
.button-icon.button-primary {
  background-color: transparent;
  color: var(--primary-color);
  border: 1px solid var(--primary-color);
}
.button-icon.button-primary:hover {
  background-color: var(--primary-color);
  color: var(--light-color);
}
.button-icon.button-danger {
  background-color: transparent;
  color: var(--danger-color);
  border: 1px solid var(--danger-color);
}
.button-icon.button-danger:hover {
  background-color: var(--danger-color);
  color: var(--light-color);
}
.full-width {
  width: 100%;
  display: flex;
  justify-content: center;
}

.app-container {
  display: flex;
  width: 100%;
  min-height: 100vh;
  background-color: var(--light-color);
  position: relative;
}

.app-sidebar {
  width: var(--sidebar-width);
  background-color: #e9f0f7;
  padding: 1.5rem 1rem;
  display: flex;
  flex-direction: column;
  border-right: 1px solid var(--grey-medium);
  overflow-y: auto;
  transition: transform 0.3s ease-in-out;
  position: fixed;
  left: 0;
  top: 0;
  height: 100%;
  z-index: var(--z-index-sidebar);
}
.sidebar-sticky-content {
}
.sidebar-header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 2rem;
  padding-left: 0.5rem;
}
.sidebar-header .app-logo {
  font-size: 1.8rem;
  color: var(--primary-color);
}
.sidebar-header h1 {
  font-size: 1.3rem;
  margin: 0;
  font-weight: 600;
}
.sidebar-section {
  margin-bottom: 2rem;
}
.sidebar-section h2 {
  font-size: 0.9rem;
  text-transform: uppercase;
  color: var(--grey-dark);
  margin-bottom: 0.8rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.5em;
  padding-left: 0.5rem;
}
.sidebar-navigation ul,
.sidebar-projects ul {
  padding-left: 0;
}

.sidebar-navigation li button.nav-button,
#static-project-list li.project-item,
#project-list li.project {
  display: flex;
  align-items: center;
  gap: 0.75em;
  width: 100%;
  text-align: left;
  padding: 0.75em 1em;
  margin-bottom: 0.25em;
  border-radius: var(--border-radius);
  background-color: transparent;
  color: var(--dark-color);
  font-size: 1rem;
  cursor: pointer;
  transition: background-color var(--transition-speed) ease,
    color var(--transition-speed) ease;
  border: none;
  word-break: break-word;
  overflow-wrap: break-word;
}
#project-list li.project {
  justify-content: space-between;
}

.sidebar-navigation li button.nav-button i,
#static-project-list li.project-item i,
#project-list li.project i {
  width: 1.2em;
  text-align: center;
  color: var(--grey-dark);
  transition: color var(--transition-speed) ease;
}
#project-list li.project > span {
  margin-left: 0 !important;
}

.sidebar-navigation li button.nav-button:hover,
#static-project-list li.project-item:hover,
#project-list li.project:hover {
  background-color: rgba(74, 144, 226, 0.1);
  color: var(--primary-color);
}
.sidebar-navigation li button.nav-button:hover i,
#static-project-list li.project-item:hover i,
#project-list li.project:hover i {
  color: var(--primary-color);
}

.sidebar-navigation li button.nav-button.active,
#static-project-list li.project-item.active,
#project-list li.project.active {
  background-color: var(--primary-color);
  color: var(--light-color);
  font-weight: 600;
}
.sidebar-navigation li button.nav-button.active i,
#static-project-list li.project-item.active i,
#project-list li.project.active i {
  color: var(--light-color);
}

#project-list li.project .edit-project-btn {
  padding: 0.2em 0.6em;
  font-size: 0.8rem;
  line-height: 1.2;
  background-color: transparent;
  color: var(--grey-dark);
  border: 1px solid transparent;
  transition: all var(--transition-speed) ease;
  opacity: 0.7;
}
#project-list li.project .edit-project-btn:hover {
  background-color: var(--grey-medium);
  border-color: var(--grey-dark);
  color: var(--dark-color);
  transform: none;
  opacity: 1;
}
#project-list li.project:hover .edit-project-btn {
  color: var(--primary-color);
  opacity: 1;
}
#project-list li.project.active .edit-project-btn {
  background-color: transparent;
  color: var(--light-color);
  border-color: rgba(255, 255, 255, 0.5);
  opacity: 0.9;
}
#project-list li.project.active .edit-project-btn:hover {
  background-color: rgba(255, 255, 255, 0.2);
  border-color: var(--light-color);
  opacity: 1;
}

.sidebar-projects .section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 0.8rem;
  padding-right: 0.5rem;
}
.sidebar-projects .section-header h2 {
  margin-bottom: 0;
}
.sidebar-projects .header-buttons {
  display: flex;
  gap: 0.5rem;
}
.sidebar-actions {
  margin-top: auto;
  padding-top: 1.5rem;
  border-top: 1px solid var(--grey-medium);
}
.sidebar-actions button {
  margin-bottom: 0.75rem;
  position: relative;
}

.app-content {
  flex: 1;
  padding: 1.5rem 2rem;
  margin-left: var(--sidebar-width);
  transition: margin-left 0.3s ease-in-out;
  position: relative;
}
.main-content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 2rem;
  padding-bottom: 1rem;
  border-bottom: 1px solid var(--grey-medium);
}
.main-content-header h1 {
  margin: 0;
}
#mobile-menu-toggle {
  display: none;
  background: none;
  border: none;
  font-size: 1.5rem;
  color: var(--dark-color);
  cursor: pointer;
  z-index: var(--z-index-header-toggle);
}

.task-priority-section {
  margin-bottom: 2.5rem;
  padding: 1.5rem;
  border-radius: var(--border-radius);
  box-shadow: var(--box-shadow);
  position: relative;
  overflow: hidden;
}
.priority-title {
  margin-bottom: 1.5rem;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 0.5em;
  color: var(--dark-color);
  padding-bottom: 0.5rem;
  border-bottom: 2px solid rgba(0, 0, 0, 0.1);
}
.environment-sky .priority-title i {
  color: #4682b4;
}
.environment-beach .priority-title i {
  color: #a0522d;
}
.environment-ground .priority-title i {
  color: var(--plant-color);
}
.environment-sky {
  background: var(--sky-bg);
}
.environment-beach {
  background: var(--beach-bg);
}
.environment-ground {
  background: var(--ground-bg);
}
.task-area {
  min-height: 150px;
}
.task-list {
  display: flex;
  flex-wrap: wrap;
  gap: 1.5rem;
  padding: 1rem 0;
}

.task-item {
  position: relative;
  cursor: pointer;
  transition: transform var(--transition-speed) ease,
    filter var(--transition-speed) ease;
  filter: drop-shadow(2px 4px 6px rgba(0, 0, 0, 0.2));
  width: 100px;
  height: 100px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.task-item:hover {
  transform: scale(1.1);
  filter: drop-shadow(3px 6px 8px rgba(0, 0, 0, 0.3));
}
.task-svg {
  width: 100%;
  height: 100%;
  display: block;
}
.task-cloud .task-svg {
  fill: var(--cloud-color);
  filter: drop-shadow(0px 3px 3px rgba(0, 0, 0, 0.1));
  animation: float 6s ease-in-out infinite alternate;
}
.task-sandcastle .task-svg {
  fill: var(--sandcastle-color);
  stroke: darken(var(--sandcastle-color), 15%);
  stroke-width: 1px;
}
.task-plant .task-svg {
  fill: var(--plant-color);
}

.task-tooltip {
  position: absolute;
  bottom: 105%;
  left: 50%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: var(--light-color);
  padding: 0.5em 0.8em;
  border-radius: var(--border-radius);
  font-size: 0.85rem;
  white-space: nowrap;
  opacity: 0;
  visibility: hidden;
  transition: opacity var(--transition-speed) ease,
    visibility var(--transition-speed) ease;
  z-index: 10;
  pointer-events: none;
}
.task-tooltip::after {
  content: "";
  position: absolute;
  top: 100%;
  left: 50%;
  margin-left: -5px;
  border-width: 5px;
  border-style: solid;
  border-color: rgba(0, 0, 0, 0.8) transparent transparent transparent;
}
.task-item:hover .task-tooltip {
  opacity: 1;
  visibility: visible;
}

.task-actions {
  position: absolute;
  top: -10px;
  right: -10px;
  display: flex;
  gap: 0.3rem;
  opacity: 0;
  visibility: hidden;
  transition: opacity var(--transition-speed) ease,
    visibility var(--transition-speed) ease;
  z-index: 5;
}
.task-item:hover .task-actions {
  opacity: 1;
  visibility: visible;
}
.task-actions .button-icon {
  background-color: var(--light-color);
  color: var(--dark-color);
  border-radius: 50%;
  width: 28px;
  height: 28px;
  font-size: 0.8rem;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}
.task-actions .button-icon:hover {
  transform: scale(1.1);
}
.task-actions .task-edit-btn {
  color: var(--primary-color);
}
.task-actions .task-edit-btn:hover {
  background-color: var(--primary-color);
  color: var(--light-color);
}
.task-actions .task-delete-btn {
  color: var(--danger-color);
}
.task-actions .task-delete-btn:hover {
  background-color: var(--danger-color);
  color: var(--light-color);
}

.modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  border: none;
  border-radius: var(--border-radius);
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  padding: 0;
  max-width: 95%;
  width: 500px;
  z-index: var(--z-index-modal, 1050);
  box-sizing: border-box;
  max-height: 85vh;
  overflow-y: hidden;
  display: block;
  visibility: hidden;
  opacity: 0;
  transition: opacity 0.25s ease-out, visibility 0.25s ease-out;
  background-color: var(--light-color, #ffffff);
}

.modal[open] {
  visibility: visible;
  opacity: 1;
  animation: fadeInScaleCenter 0.3s ease-out forwards;
}

.modal > form {
  padding: 2rem;
  display: flex;
  flex-direction: column;
  gap: 1rem;
  box-sizing: border-box;
  overflow-y: auto;
  max-height: 100%;
}

.modal::backdrop {
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(3px);
  animation: fadeIn 0.3s ease-out forwards;
  z-index: var(--z-index-backdrop, 1040);
}

.modal-close-btn {
  position: absolute;
  top: 10px;
  right: 10px;
  background: none;
  border: none;
  font-size: 1.8rem;
  line-height: 1;
  color: var(--grey-dark, #666666);
  cursor: pointer;
  padding: 0.2em;
  z-index: calc(var(--z-index-modal, 1050) + 1);
}
.modal-close-btn:hover {
  color: var(--dark-color, #333333);
}

.modal h2 {
  margin-top: 0;
  margin-bottom: 1.5rem;
  text-align: center;
  color: var(--primary-color, #4a90e2);
  word-break: break-word;
  flex-shrink: 0;
}

.form-group {
  display: flex;
  flex-direction: column;
  flex-shrink: 0;
}
.form-group label {
  margin-bottom: 0.4rem;
  font-weight: 600;
  font-size: 0.9rem;
  color: var(--grey-dark, #666666);
}
.form-group input[type="text"],
.form-group input[type="date"],
.form-group textarea,
.form-group select {
  padding: 0.8em 1em;
  border: 1px solid var(--grey-medium, #e0e0e0);
  border-radius: var(--border-radius, 8px);
  font-size: 1rem;
  font-family: inherit;
  width: 100%;
  box-sizing: border-box;
}
.form-group input:focus,
.form-group textarea:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--primary-color, #4a90e2);
  box-shadow: 0 0 0 2px rgba(74, 144, 226, 0.3);
}
.form-group textarea {
  resize: vertical;
  min-height: 80px;
}
.form-row {
  display: flex;
  gap: 1rem;
  flex-shrink: 0;
}
.form-row .form-group {
  flex: 1;
}
.modal-controls {
  display: flex;
  justify-content: flex-end;
  flex-wrap: wrap;
  gap: 0.75rem;
  margin-top: 1.5rem;
  padding-top: 1rem;
  border-top: 1px solid var(--grey-medium, #e0e0e0);
  flex-shrink: 0;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
@keyframes fadeInScaleCenter {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.95);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}
@keyframes float {
  0% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-8px);
  }
  100% {
    transform: translateY(0px);
  }
}

@media (max-width: 992px) {
  .task-item {
    width: 80px;
    height: 80px;
  }
  .task-list {
    gap: 1rem;
  }
}

@media (max-width: 768px) {
  .app-sidebar {
    transform: translateX(-100%);
    box-shadow: var(--box-shadow);
  }
  .app-sidebar.is-open {
    transform: translateX(0);
  }
  .app-content {
    margin-left: 0;
    padding: 1rem;
  }
  #mobile-menu-toggle {
    display: block;
  }
  .modal {
    width: 90%;
  }
  .form-row {
    flex-direction: column;
    gap: 1rem;
  }
  .modal-controls {
    justify-content: center;
  }
}

@media (max-width: 480px) {
  h1 {
    font-size: 1.5rem;
  }
  h2 {
    font-size: 1.2rem;
  }
  .task-priority-section {
    padding: 1rem;
  }
  .task-item {
    width: 65px;
    height: 65px;
  }
  .task-list {
    justify-content: space-around;
  }
  .sidebar-header h1 {
    font-size: 1.1rem;
  }
  .app-sidebar {
    width: 240px;
  }
  .modal > form {
    padding: 1.5rem 1rem;
  }
  .modal h2 {
    font-size: 1.3rem;
  }
}
